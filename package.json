{
  "name": "parcel-postcss-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate - PostCSS with Sugarss syntax with Parcel.",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -p \"[{name}]\" -n \"Parcel,Tunnel\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn run serve\" \"yarn run tunnel\"",
    "tunnel": "ssh -R 80:localhost:1234 serveo.net",
    "serve": "parcel src/index.html",
    "build": "parcel build src/index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "parcel-bundler": "^1.10.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "parcel-plugin-clean-dist": "0.0.6",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.1.0",
    "posthtml-include": "^1.2.0",
    "sugarss": "^2.0.0"
  }
}
